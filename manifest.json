{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Youtube Controller",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs",
        "scripting",
        "activeTab",
        "notifications"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://*/*",
        "https://*/*"
    ]
}